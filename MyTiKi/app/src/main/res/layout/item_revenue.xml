<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.thuypham.ptithcm.mytiki.util.FunctionHelpKt"/>
        <variable
            name="revenue"
            type="com.thuypham.ptithcm.mytiki.data.Revenue" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemRevenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding10"
        android:paddingEnd="@dimen/padding10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayBg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{@string/date+revenue.date}"
            android:textColor="@color/colorTextHint"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Ngày 20/11/2020" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            tools:text="Tổng đơn: 10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlueDark"
            android:textStyle="bold"
            totalPrice="@{revenue.totalPrice}"
            tools:text="Tổng tiền: 100.000.000 đ" />

    </LinearLayout>
</layout>