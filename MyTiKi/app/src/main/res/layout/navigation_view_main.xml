<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.thuypham.ptithcm.mytiki.base.ActivityType" />

        <variable
            name="parentView"
            type="com.thuypham.ptithcm.mytiki.widget.CustomDrawerLayout" />

        <variable
            name="user"
            type="com.thuypham.ptithcm.mytiki.data.User" />
    </data>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layoutDirection="ltr">

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLogo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shopping"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnCloseDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:onClick="@{(v) -> parentView.onClick(v)}"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_menu_bar" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAvt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/margin16"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLogo"
                app:srcCompat="@drawable/ic_user_profile" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@{user.name}"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ivAvt"
                app:layout_constraintTop_toTopOf="@id/ivAvt"
                tools:text="Thuy Pham" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin5"
                android:text="@{user.email}"
                app:layout_constraintStart_toStartOf="@id/tvName"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                tools:text="phamthithuy@gmail.com" />

            <TextView
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_margin"
                android:onClick="@{(v) -> parentView.onClick(ActivityType.EDIT_PROFILE)}"
                android:padding="@dimen/margin5"
                android:text="@string/edit"
                android:textColor="@color/colorBlueDark"
                app:layout_constraintStart_toStartOf="@id/ivAvt"
                app:layout_constraintTop_toBottomOf="@id/ivAvt" />

            <View
                android:id="@+id/view"
                style="@style/Divider.Horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginEnd="@dimen/default_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnEditProfile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnSlide"
                style="@style/Button.Drawer"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin8"
                android:drawableEnd="@drawable/ic_arr_right"
                android:onClick="@{(v) -> parentView.onClick(ActivityType.SLIDE)}"
                android:text="@string/slide"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnProduct"
                style="@style/Button.Drawer"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin8"
                android:drawableEnd="@drawable/ic_arr_right"
                android:onClick="@{(v) -> parentView.onClick(ActivityType.PRODUCT)}"
                android:text="@string/products"
                app:layout_constraintTop_toBottomOf="@id/btnSlide" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnCategory"
                style="@style/Button.Drawer"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin8"
                android:drawableEnd="@drawable/ic_arr_right"
                android:onClick="@{(v) -> parentView.onClick(ActivityType.CATEGORY)}"
                android:text="@string/categories"
                app:layout_constraintTop_toBottomOf="@id/btnProduct" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnOrder"
                style="@style/Button.Drawer"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin8"
                android:drawableEnd="@drawable/ic_arr_right"
                android:onClick="@{(v) -> parentView.onClick(ActivityType.ORDER)}"
                android:text="@string/orders"
                app:layout_constraintTop_toBottomOf="@id/btnCategory" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnRevenue"
                style="@style/Button.Drawer"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin8"
                android:drawableEnd="@drawable/ic_arr_right"
                android:onClick="@{(v) -> parentView.onClick(ActivityType.REVENUE)}"
                android:text="@string/revenue"
                app:layout_constraintTop_toBottomOf="@id/btnOrder" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnAccounts"
                style="@style/Button.Drawer"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin8"
                android:drawableEnd="@drawable/ic_arr_right"
                android:onClick="@{(v) -> parentView.onClick(ActivityType.ACCOUNT)}"
                android:text="@string/accounts"
                app:layout_constraintTop_toBottomOf="@id/btnRevenue" />

            <TextView
                android:id="@+id/btnLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/bg_stroke_rounded_corner"
                android:gravity="center"
                android:padding="@dimen/padding10"
                android:onClick="@{(v) -> parentView.onClick(v)}"
                android:text="@string/sign_out"
                android:textColor="@color/colorBlueDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.navigation.NavigationView>
</layout>