<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.TextUtils" />
        <variable
            name="fragment"
            type="com.thuypham.ptithcm.mytiki.feature.authentication.ForgotPasswordFragment" />
        <variable
            name="userViewModel"
            type="com.thuypham.ptithcm.mytiki.viewmodel.UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_email_forgot_pw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:theme="@style/TextLabel">

                <com.thuypham.ptithcm.mytiki.widget.EditTextField
                    android:id="@+id/edt_email_forgot_password"
                    android:layout_width="match_parent"
                    android:importantForAutofill="auto"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_phone_number"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:text="@={userViewModel.email}"
                    android:theme="@style/EditTextTheme"
                    app:clearButtonMode="whileEditing" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                style="@style/Button"
                android:id="@+id/btn_reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:onClick="@{()->fragment.onClickResetPassword()}"
                android:enabled="@{!TextUtils.isEmpty(userViewModel.email)}"
                android:layout_marginEnd="16dp"
                android:text="@string/pass_word_reset"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/text_reset_pw" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressForgotPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>