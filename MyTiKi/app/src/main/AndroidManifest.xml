<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.thuypham.ptithcm.mytiki">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_bird"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".feature.employee.main.MainEmployeeActivity"></activity>
        <activity android:name=".feature.authentication.AuthActivity" />
        <activity android:name=".feature.customer.order.OrderDetailActivity" />
        <activity android:name=".feature.address.AddressActivity" />
        <activity android:name=".feature.customer.cart.CartActivity" />
        <activity android:name=".feature.customer.product.ProductOfCategoryActivity" />
        <activity android:name=".feature.customer.product.FavoriteActivity" />
        <activity android:name=".feature.customer.product.ProductDetailActivity" />
        <activity
            android:name=".feature.splash.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.customer.main.MainActivity"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".feature.customer.order.OrderActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".feature.authentication.SignInUpActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".feature.authentication.EditProfileActivity"
            android:screenOrientation="fullSensor" />

        <service
            android:name=".services.FCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>